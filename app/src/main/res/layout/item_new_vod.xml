<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    >

    <ImageView
        android:id="@+id/iv_cover_thumb"
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_default_baby_boy"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/tv_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_cover_thumb"
        android:layout_alignEnd="@+id/iv_cover_thumb"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        tools:text="10:10"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10"
        android:background="@drawable/shape_video_duration_bg"
        />

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_cover_thumb"
        android:layout_toRightOf="@+id/iv_cover_thumb"
        android:gravity="center_vertical"
        tools:text="这个是视频的标题哦二戒咖啡接口返回 反而将可能"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/tv_video_title"
        android:layout_alignStart="@id/tv_video_title"
        android:layout_alignBottom="@id/iv_cover_thumb"
        android:gravity="center_vertical"
        tools:text="这个是视频的标题哦二戒咖啡接口返回 反而将可能发的法兰克来看估计他人孔盖天然健康更换福耳机孔给你看人家给你突然给他热那个你条人命，然那个人"
        android:textColor="@color/cl_666666"
        android:textSize="@dimen/font_size_11" />
</RelativeLayout>