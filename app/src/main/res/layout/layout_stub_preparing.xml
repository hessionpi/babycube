<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fl_preparing_last_menstruation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_2c2c2c"
            android:text="@string/previous_menstruation"
            />

        <TextView
            android:id="@+id/tv_preparing_last_menstruation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:drawableEnd="@drawable/ic_common_next"
            android:drawablePadding="12dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_888888"
            tools:text="2016年9月25日"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_dividing_line"
        />

    <FrameLayout
        android:id="@+id/fl_duration_menstruation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_2c2c2c"
            android:text="@string/duration_menstruation"
            />

        <TextView
            android:id="@+id/tv_duration_menstruation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:drawableEnd="@drawable/ic_common_next"
            android:drawablePadding="12dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_888888"
            android:text="7天"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_dividing_line"
        />

    <FrameLayout
        android:id="@+id/fl_cycle_menstruation_prepar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_2c2c2c"
            android:text="@string/cycle_menstruation"
            />

        <TextView
            android:id="@+id/tv_cycle_menstruation_prepar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:drawableEnd="@drawable/ic_common_next"
            android:drawablePadding="12dp"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/cl_888888"
            android:text="28天"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_dividing_line"
        />
</LinearLayout>