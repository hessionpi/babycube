<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.rjzd.baby.ui.activity.RegisterCodeActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back"
        android:layout_marginStart="25dp"
        android:text="@string/my_code"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_30" />

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_number"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="40dp">


        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="@color/cl_cccccc"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size_23"
            android:textColor="@color/white"
             />

        <TextView
            android:id="@+id/gain_code"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_register_number"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/gain_code"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_11"
            android:textCursorDrawable="@null"
             />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ll_number"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white" />


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_done_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/view_line"
            android:text="@string/ok"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_17" />

</RelativeLayout>
