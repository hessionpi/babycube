<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_main_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="horizontal" />
            <!--备孕-->
            <LinearLayout
                android:id="@+id/ll_plan_for_pregnancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_plan_for_pregnancy_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="经期第三天"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sy_icon_time"
                        android:drawablePadding="6dp"
                        android:text="预计下次月经开始时间"
                        android:textColor="@color/cl_aaaaaa"
                        android:textSize="@dimen/font_size_13" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="2018.04.23"
                        android:textColor="@color/cl_primary"
                        android:textSize="@dimen/font_size_13" />

                    <TextView
                        android:id="@+id/tv_change_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/sy_icon_huaiyunle"
                        android:drawablePadding="6dp"
                        android:text="怀孕了？"
                        android:textSize="@dimen/font_size_13" />

                </LinearLayout>
            </LinearLayout>
            <!--怀孕-->
            <LinearLayout
                android:id="@+id/ll_with_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_with_child_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_today" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="怀孕中"
                        android:textColor="@color/cl_333333"
                        android:textSize="@dimen/font_size_14" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_pregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:overScrollMode="never"
                    android:scrollbars="horizontal">

                </android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/rl_week"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ProgressBar
                        android:id="@+id/pb_week"
                        style="@style/mProgress_horizontal"
                        android:layout_width="345dp"
                        android:layout_height="3dp"
                        android:layout_centerInParent="true"
                        android:background="@color/cl_d5eef2"
                        android:max="40"
                        android:progress="10"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sy_icon_huaiyun" />
                </RelativeLayout>
                <!-- <SeekBar
                     android:id="@+id/sk_week"
                     style="@style/mProgress_horizontal"
                     android:layout_width="345dp"
                     android:layout_height="wrap_content"
                     android:background="@color/cl_d5eef2"
                     android:layout_marginTop="20dp"
                     android:layout_gravity="center_horizontal"
                     android:max="100"
                     android:progress="40"
                     android:secondaryProgress="0"
                     android:visibility="visible"
                 android:thumb="@drawable/sy_icon_huaiyun"

                     />-->
            </LinearLayout>
            <!--宝宝-->
            <LinearLayout
                android:id="@+id/ll_baby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_baby_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_today" />

                    <TextView
                        android:id="@+id/tv_baby_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="宝宝"
                        android:textColor="@color/cl_333333"
                        android:textSize="@dimen/font_size_14" />
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_baby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="horizontal">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

    </android.support.v7.widget.RecyclerView>

    <!--怀孕-->
    <LinearLayout
        android:id="@+id/ll_pregnancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_baby_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:drawableLeft="@drawable/icon_babytixing"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/grzl_icon_more"
            android:padding="10dp"

            android:text="您的宝宝是否已出生？"
            android:textColor="@color/cl_555555"
            android:textSize="@dimen/font_size_15"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_pregnancy_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/shape_circle"
            android:drawablePadding="8dp"
            android:paddingBottom="7dp"
            android:paddingTop="20dp"
            tools:text="孕10周第二天"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_pregnancy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            tools:text="2018年5月20日 星期五"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_11" />

        <LinearLayout
            android:id="@+id/ll_baby_change"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_white_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_shapeImgThumb"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_shapeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="您的宝宝目前的体型大小相当于金桔"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mom_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_white_bg"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_mom_pregnancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="准妈妈变化"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:text="每日博客"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_momchanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="孕10周以后，扩扩扩扩扩扩扩扩扩扩坎坎坷坷扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩坎坎坷坷扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩扩坎坎坷坷扩扩扩扩扩扩扩"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/font_size_14" />


        </LinearLayout>
    </LinearLayout>
    <!--备孕和宝宝-->
    <TextView
        android:id="@+id/tv_no_baby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/shape_circle"
        android:drawablePadding="8dp"
        tools:text="2018年5月20日 星期五"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>
