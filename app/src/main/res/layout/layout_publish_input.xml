        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minHeight="31dp"
            android:maxHeight="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:lineSpacingExtra="3dp"
            android:layout_weight="1.0"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/cl_333333"
            android:hint="@string/hint_discuss"
            android:textColorHint="@color/cl_cccccc"
            android:background="@drawable/shape_edit_with_stoke_bg"
            tools:text="激发甲方哈放假啊的看法那麻烦呢更健康更女人看见你耐热科技馆呢人家看过你 给客人那个卡牛肉块刚看过你看过呢女人看过你看贵人鸟gkrtkljk93吗老顾客；老顾客离开任务开发和人家开关盒机看了看积分"
            />

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/cl_c5c5c5"
            android:text="@string/publish"
            />
    </LinearLayout>

</LinearLayout>
