<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cl_primary_background"
    tools:context=".ui.activity.UserinfoActivity">

    <com.rjzd.baby.ui.widget.ToolsbarView
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionRightText="@string/save"
        app:actionLeftBackground="@drawable/ic_toolbar_back"
        app:titleText="@string/userinfo"
        >
    </com.rjzd.baby.ui.widget.ToolsbarView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_headpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            tools:src="@drawable/icon_default_pic"
            />

        <TextView
            android:id="@+id/tv_change_head_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="end"
            android:paddingStart="120dp"
            android:drawableEnd="@drawable/ic_common_next"
            android:drawablePadding="12dp"
            android:textColor="@color/cl_999999"
            android:textSize="@dimen/font_size_14"
            android:text="@string/change_headpic"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >

        <!-- 昵称 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/nickname"
                />

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLength="16"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="200dp"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                android:background="@null"
                tools:text="铁扇公主的妈妈们"
                />
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:background="@color/cl_dividing_line"
            />

        <!-- 性别 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/sex"
                />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="120dp"
                android:drawableEnd="@drawable/ic_common_next"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                tools:text="女"
                />
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:background="@color/cl_dividing_line"
            />

        <!-- 地区 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/location"
                />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="120dp"
                android:drawableEnd="@drawable/ic_common_next"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                tools:text="香港 湾仔"
                />
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:background="@color/cl_dividing_line"
            />

        <!-- 身高 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/hight"
                />

            <TextView
                android:id="@+id/tv_hight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="120dp"
                android:drawableEnd="@drawable/ic_common_next"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                tools:text="185cm"
                />
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:background="@color/cl_dividing_line"
            />

        <!-- 体重 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/weight"
                />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="120dp"
                android:drawableEnd="@drawable/ic_common_next"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                tools:text="65kg"
                />
        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:background="@color/cl_dividing_line"
            />

        <!-- 生日 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/font_size_15"
                android:text="@string/birthday"
                />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="120dp"
                android:drawableEnd="@drawable/ic_common_next"
                android:drawablePadding="12dp"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_14"
                tools:text="1983年5月10日"
                />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>