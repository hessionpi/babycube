<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cl_primary_background"
    tools:context=".ui.activity.ChooseProvinceActivity">


    <com.rjzd.baby.ui.widget.ToolsbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background="@color/white"
        app:actionLeftBackground="@drawable/ic_toolbar_back_black"
        app:titleText="@string/choose_location"
        app:titleColor="@color/cl_333333"
        >
    </com.rjzd.baby.ui.widget.ToolsbarView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        >

    </android.support.v7.widget.RecyclerView>




</LinearLayout>